{
    "manifest_version": 3,
    "name": "Brightspace Percentager",
    "version": "0.1.0",
    "description": "Show the calculated grade percentage along with the Total Score in the assessment view.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": ["http://*/*", "https://*/*"]
        }
    ],
    "author": "Stephen Peasley",  
    "homepage_url": "https://github.com/speasley/brightspace-percentager-chrome"
  }